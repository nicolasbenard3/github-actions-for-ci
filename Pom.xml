<?xml version="1.0" encoding="ISO-8859-1"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0">
<modelVersion>4.0.0</modelVersion>
<groupId>io.skullabs.boilerplates</groupId>
<version>1.1.0</version>
<artifactId>kotlin</artifactId>
<name>Kotlin Simplified Project</name>
<description>Kotlin Simplified Project</description>
<packaging>pom</packaging>
<url>https://github.com/Skullabs/boilerplates</url>
<licenses>
<license>
<name>The Apache Software License, Version 2.0</name>
<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
<distribution>repo</distribution>
</license>
</licenses>
<scm>
<connection>scm:git:git@github.com:Skullabs/boilerplates.git</connection>
<url>scm:git:git@github.com:Skullabs/boilerplates.git</url>
<developerConnection>scm:git:git@github.com:Skullabs/boilerplates.git</developerConnection>
</scm>
<developers>
<developer>
<id>miere</id>
<email>miere.teixeira@gmail.com</email>
<name>Miere Liniel Teixeira</name>
</developer>
</developers>
<properties>
<!-- Dependencies Versions -->
<version.kotlin>1.3.30</version.kotlin>
<version.junit.platform>1.1.0</version.junit.platform>
<version.junit.jupiter>5.1.0</version.junit.jupiter>
<version.lombok>1.16.20</version.lombok>
<version.mockito>1.10.19</version.mockito>
<!-- Plugin's Versions -->
<version.compiler.plugin>3.7.0</version.compiler.plugin>
<version.resources.plugin>2.6</version.resources.plugin>
<version.jar.plugin>3.0.2</version.jar.plugin>
<version.source.plugin>2.3</version.source.plugin>
<version.javadoc.plugin>2.10.1</version.javadoc.plugin>
<version.surfire.plugin>2.19.1</version.surfire.plugin>
<version.failsafe.plugin>2.19.1</version.failsafe.plugin>
<version.gpg.plugin>1.5</version.gpg.plugin>
<version.nexus-staging.plugin>1.6.3</version.nexus-staging.plugin>
<!-- Configs -->
<config.dir.source>${project.basedir}/source</config.dir.source>
<config.dir.source.generated>${project.build.directory}/generated-sources/annotations</config.dir.source.generated>
<config.dir.resource>${project.basedir}/resources</config.dir.resource>
<config.dir.test.source>${project.basedir}/tests</config.dir.test.source>
<config.dir.test.resource>${project.basedir}/tests-resources</config.dir.test.resource>
<config.dir.test.source.generated>${project.build.directory}/generated-test-sources/annotations</config.dir.test.source.generated>
<config.dir.output>${project.basedir}/output</config.dir.output>
<config.dir.web>${project.basedir}/webapp</config.dir.web>
<config.skip.tests>false</config.skip.tests>
<config.encoding>UTF-8</config.encoding>
<config.encoding.source>${config.encoding}</config.encoding.source>
<config.encoding.resources>${config.encoding}</config.encoding.resources>
<project.build.sourceEncoding>${config.encoding}</project.build.sourceEncoding>
<project.reporting.outputEncoding>${config.encoding}</project.reporting.outputEncoding>
<config.kotlin.jvmTarget>1.8</config.kotlin.jvmTarget>
<!-- Enforcing encoding -->
<project.build.sourceEncoding>${config.encoding}</project.build.sourceEncoding>
<project.reporting.outputEncoding>${config.encoding}</project.reporting.outputEncoding>
</properties>
<dependencyManagement>
<dependencies>
<!-- Kotlin Dependencies -->
<dependency>
<groupId>org.jetbrains.kotlin</groupId>
<artifactId>kotlin-stdlib</artifactId>
<version>${version.kotlin}</version>
</dependency>
<dependency>
<groupId>org.jetbrains.kotlin</groupId>
<artifactId>kotlin-stdlib-jdk8</artifactId>
<version>${version.kotlin}</version>
</dependency>
<dependency>
<groupId>org.jetbrains.kotlin</groupId>
<artifactId>kotlin-stdlib-jdk7</artifactId>
<version>${version.kotlin}</version>
</dependency>
<dependency>
<groupId>org.jetbrains.kotlin</groupId>
<artifactId>kotlin-reflect</artifactId>
<version>${version.kotlin}</version>
</dependency>
<!-- Test time dependencies -->
<dependency>
<groupId>org.jetbrains.kotlin</groupId>
<artifactId>kotlin-test</artifactId>
<version>${version.kotlin}</version>
<scope>test</scope>
</dependency>
<dependency>
<groupId>org.jetbrains.kotlin</groupId>
<artifactId>kotlin-test-junit</artifactId>
<version>${version.kotlin}</version>
<scope>test</scope>
</dependency>
<dependency>
<groupId>org.junit.jupiter</groupId>
<artifactId>junit-jupiter-api</artifactId>
<version>${version.junit.jupiter}</version>
<scope>test</scope>
</dependency>
<dependency>
<groupId>org.junit.jupiter</groupId>
<artifactId>junit-jupiter-engine</artifactId>
<version>${version.junit.jupiter}</version>
<scope>test</scope>
</dependency>
<dependency>
<groupId>org.junit.vintage</groupId>
<artifactId>junit-vintage-engine</artifactId>
<version>${junit.vintage.version}</version>
<scope>test</scope>
</dependency>
</dependencies>
</dependencyManagement>
<build>
<sourceDirectory>${config.dir.source}</sourceDirectory>
<testSourceDirectory>${config.dir.test.source}</testSourceDirectory>
<directory>${config.dir.output}</directory>
<outputDirectory>${config.dir.output}/classes</outputDirectory>
<testOutputDirectory>${config.dir.output}/test-classes</testOutputDirectory>
<resources>
<resource>
<directory>${config.dir.resource}</directory>
<includes>
<include>**/*.*</include>
</includes>
<excludes>
<exclude>**/*.java</exclude>
<exclude>**/*.kt</exclude>
</excludes>
</resource>
<resource>
<directory>${config.dir.source.generated}</directory>
<includes>
<include>**/*.*</include>
</includes>
<excludes>
<exclude>**/*.java</exclude>
<exclude>**/*.kt</exclude>
</excludes>
</resource>
<resource>
<directory>${config.dir.output}/generated-sources/kapt/compile</directory>
<includes>
<include>**/*.*</include>
</includes>
<excludes>
<exclude>**/*.java</exclude>
<exclude>**/*.kt</exclude>
</excludes>
</resource>
</resources>
<testResources>
<testResource>
<directory>${config.dir.test.resource}</directory>
<includes>
<include>**/*.*</include>
</includes>
<excludes>
<exclude>**/*.java</exclude>
<exclude>**/*.kt</exclude>
</excludes>
</testResource>
<testResource>
<directory>${config.dir.test.source.generated}</directory>
<includes>
<include>**/*.*</include>
</includes>
<excludes>
<exclude>**/*.java</exclude>
<exclude>**/*.kt</exclude>
</excludes>
</testResource>
</testResources>
<plugins>
<!-- Kotlin Plugin -->
<plugin>
<artifactId>kotlin-maven-plugin</artifactId>
<groupId>org.jetbrains.kotlin</groupId>
<version>${version.kotlin}</version>
<configuration>
<jvmTarget>${config.kotlin.jvmTarget}</jvmTarget>
</configuration>
<executions>
<execution>
<id>kapt</id>
<goals>
<goal>kapt</goal>
</goals>
<phase>generate-sources</phase>
<configuration>
<sourceDirs>
<sourceDir>${config.dir.source}</sourceDir>
</sourceDirs>
<output>${config.dir.source.generated}</output>
</configuration>
</execution>
<execution>
<id>kapt-test</id>
<goals>
<goal>test-kapt</goal>
</goals>
<phase>generate-test-sources</phase>
<configuration>
<sourceDirs>
<sourceDir>${config.dir.test.source}</sourceDir>
</sourceDirs>
<testOutput>${config.dir.test.source.generated}</testOutput>
</configuration>
</execution>
<execution>
<id>default-compile</id>
<goals>
<goal>compile</goal>
</goals>
<phase>compile</phase>
<configuration>
<sourceDirs>
<sourceDir>${config.dir.source}</sourceDir>
<sourceDir>${config.dir.source.generated}</sourceDir>
<sourceDir>${config.dir.output}/generated-sources/kapt/compile</sourceDir>
</sourceDirs>
</configuration>
</execution>
<execution>
<id>default-testCompile</id>
<goals>
<goal>test-compile</goal>
</goals>
<phase>test-compile</phase>
<configuration>
<sourceDirs>
<sourceDir>${config.dir.test.source}</sourceDir>
<sourceDir>${config.dir.test.source.generated}</sourceDir>
<sourceDir>${config.dir.output}/generated-sources/kapt/test</sourceDir>
</sourceDirs>
</configuration>
</execution>
</executions>
</plugin>
<plugin>
<inherited>true</inherited>
<artifactId>maven-surefire-plugin</artifactId>
<version>${version.surfire.plugin}</version>
<configuration>
<skip>${config.skip.tests}</skip>
<includes>
<include>**/Test*.java</include>
<include>**/*Test.java</include>
<include>**/*Tests.java</include>
<include>**/*TestCase.java</include>
<include>**/Test*.kt</include>
<include>**/*Test.kt</include>
<include>**/*Tests.kt</include>
<include>**/*TestCase.kt</include>
</includes>
</configuration>
<dependencies>
<dependency>
<groupId>org.junit.platform</groupId>
<artifactId>junit-platform-surefire-provider</artifactId>
<version>${version.junit.platform}</version>
</dependency>
</dependencies>
</plugin>
<plugin>
<artifactId>maven-compiler-plugin</artifactId>
<groupId>org.apache.maven.plugins</groupId>
<version>${version.compiler.plugin}</version>
<executions>
<execution>
<id>default-compile</id>
<phase>none</phase>
</execution>
<execution>
<id>default-testCompile</id>
<phase>none</phase>
</execution>
<execution>
<id>java-compile</id>
<phase>compile</phase>
<goals>
<goal>compile</goal>
</goals>
</execution>
<execution>
<id>java-testCompile</id>
<phase>test-compile</phase>
<goals>
<goal>testCompile</goal>
</goals>
</execution>
</executions>
</plugin>
<plugin>
<inherited>true</inherited>
<groupId>org.apache.maven.plugins</groupId>
<artifactId>maven-jar-plugin</artifactId>
<version>${version.jar.plugin}</version>
<configuration>
<archive>
<manifestEntries>
<Automatic-Module-Name>${project.groupId}.${project.artifactId}</Automatic-Module-Name>
</manifestEntries>
</archive>
</configuration>
</plugin>
</plugins>
</build>
<profiles>
<!-- deploy -->
<profile>
<id>deploy-sources</id>
<build>
<plugins>
<plugin>
<groupId>org.apache.maven.plugins</groupId>
<artifactId>maven-source-plugin</artifactId>
<version>${version.source.plugin}</version>
<executions>
<execution>
<id>attach-sources</id>
<phase>verify</phase>
<goals>
<goal>jar-no-fork</goal>
</goals>
</execution>
</executions>
</plugin>
<plugin>
<groupId>org.apache.maven.plugins</groupId>
<artifactId>maven-javadoc-plugin</artifactId>
<version>${version.javadoc.plugin}</version>
<executions>
<execution>
<phase>verify</phase>
<goals>
<goal>jar</goal>
</goals>
</execution>
</executions>
<configuration>
<show>private</show>
<nohelp>true</nohelp>
</configuration>
</plugin>
</plugins>
</build>
</profile>
<!-- deploy-to-sonatype -->
<profile>
<id>use-sonatype-stagging-repo</id>
<distributionManagement>
<snapshotRepository>
<id>ossrh</id>
<url>https://oss.sonatype.org/content/repositories/snapshots</url>
</snapshotRepository>
<repository>
<id>ossrh</id>
<url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
</repository>
</distributionManagement>
<build>
<plugins>
<plugin>
<groupId>org.sonatype.plugins</groupId>
<artifactId>nexus-staging-maven-plugin</artifactId>
<version>${version.nexus-staging.plugin}</version>
<extensions>true</extensions>
<configuration>
<serverId>ossrh</serverId>
<nexusUrl>https://oss.sonatype.org/</nexusUrl>
<autoReleaseAfterClose>false</autoReleaseAfterClose>
</configuration>
</plugin>
<plugin>
<groupId>org.apache.maven.plugins</groupId>
<artifactId>maven-gpg-plugin</artifactId>
<version>${version.gpg.plugin}</version>
<executions>
<execution>
<id>sign-artifacts</id>
<phase>verify</phase>
<goals>
<goal>sign</goal>
</goals>
</execution>
</executions>
</plugin>
<plugin>
<groupId>org.apache.maven.plugins</groupId>
<artifactId>maven-source-plugin</artifactId>
<version>${version.source.plugin}</version>
<executions>
<execution>
<id>attach-sources</id>
<phase>verify</phase>
<goals>
<goal>jar-no-fork</goal>
</goals>
</execution>
</executions>
</plugin>
<plugin>
<groupId>org.apache.maven.plugins</groupId>
<artifactId>maven-javadoc-plugin</artifactId>
<version>${version.javadoc.plugin}</version>
<executions>
<execution>
<phase>verify</phase>
<goals>
<goal>jar</goal>
</goals>
</execution>
</executions>
<configuration>
<show>private</show>
<nohelp>true</nohelp>
</configuration>
</plugin>
</plugins>
</build>
</profile>
</profiles>
</project>